{
  "$schema": "https://opencode.ai/config.json",
  "model": "opencode/minimax-m2.1-free",
  "plugin": ["@different-ai/opencode-browser"],
  "tools": {
    "browser_*": false
  },
  "mcp": {
    "fireflies": {
      "type": "remote",
      "url": "https://api.fireflies.ai/mcp",
      "enabled": false
    },
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "@playwright/mcp@latest"
      ],
      "enabled": false
    },
    "figma": {
      "type": "remote",
      "url": "http://127.0.0.1:3845/mcp",
      "enabled": false
    },
    "clickup": {
      "type": "remote",
      "url": "https://mcp.clickup.com/mcp",
      "enabled": false
    },
    "linear": {
      "type": "remote",
      "url": "https://mcp.linear.app/mcp",
      "enabled": false
    }
  },
  "agent": {
    "build": {
      "mode": "primary",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true,
        "browser_*": false
      }
    },
    "plan": {
      "mode": "primary",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "browser_*": false
      }
    },
    "learn": {
      "description": "Helps explore questions, generate solutions, and understand concepts",
      "mode": "primary",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "browser_*": false
      }
    },
    "code-reviewer": {
      "description": "Reviews code for best practices and potential issues",
      "mode": "subagent",
      "prompt": "You are a code reviewer. Focus on security, performance, and maintainability.",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "browser_*": false
      }
    },
    "fireflies": {
      "mode": "subagent",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "fireflies": true,
        "playwright": false,
        "figma": false
      }
    },
    "playwright": {
      "mode": "subagent",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "fireflies": false,
        "playwright": true,
        "figma": false
      }
    },
    "figma": {
      "mode": "subagent",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "fireflies": false,
        "playwright": false,
        "figma": true
      }
    },
    "browser": {
      "description": "Browser automation agent - use browser_* tools to control Chrome",
      "mode": "primary",
      "tools": {
        "browser_*": true
      }
    }
  }
}
